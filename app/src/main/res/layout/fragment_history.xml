<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryFragment"
    android:background="@color/white">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- November Section -->
        <LinearLayout
            android:id="@+id/novLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="84dp">

            <TextView
                android:id="@+id/textViewNov"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Noviembre, 20"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#002055" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewNov"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:backgroundTint="#756EF3"
                app:cardCornerRadius="23.5dp">

                <ImageButton
                    android:id="@+id/toggleButton1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image19"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/editTextRecetaDiagnostico1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/novLayout"
            android:hint="Proximanete Diagnostico PDF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:visibility="visible"/>
        <!-- December Section -->
        <LinearLayout
            android:id="@+id/decLayout"
            android:layout_below="@id/editTextRecetaDiagnostico1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/textViewDec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="December, 20"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#002055" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewDec"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:backgroundTint="#756EF3"
                app:cardCornerRadius="23.5dp">

                <ImageButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image19"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/editTextRecetaDiagnostico2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/decLayout"
            android:hint="Proximanete Diagnostico PDF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:visibility="visible"/>
    </RelativeLayout>

</FrameLayout>