<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"> <!--CARD PARA DOCTOR DADO DE ALTA OFICIAL -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageButton
            android:id="@+id/borrarButton"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/borrar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Borrar"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/doctorIcon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/paciente1"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/doctorIcon"
            android:layout_marginStart="16dp"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/especialidadMedica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/doctorIcon"
            android:layout_below="@id/doctorName"
            android:layout_marginStart="16dp"
            android:text=""
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>